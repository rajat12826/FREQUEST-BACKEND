generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        String   @id @default(cuid())
  name      String   @unique
  score     Int      @default(0)
  streak    Int      @default(0)
  status    String   @default("offline")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}